# Intent Engine - Environment Configuration
# Copy this file to .env and customize for your environment

# ===========================================
# PostgreSQL Database Configuration
# ===========================================
POSTGRES_DB=intent_engine
POSTGRES_USER=intent_user
POSTGRES_PASSWORD=intent_secure_password_123
POSTGRES_PORT=5432

# ===========================================
# Database Connection Pool Settings
# ===========================================
# Pool size - adjust based on expected concurrent connections
DATABASE_POOL_SIZE=10
# Max overflow - additional connections beyond pool_size
DATABASE_MAX_OVERFLOW=20
# Pool timeout in seconds
DATABASE_POOL_TIMEOUT=30
# Pool recycle time in seconds (1800 = 30 minutes)
DATABASE_POOL_RECYCLE=1800

# ===========================================
# Redis Cache Configuration
# ===========================================
# Enable Redis for distributed caching (set to 'true' to enable)
REDIS_ENABLED=false
# Redis server hostname
REDIS_HOST=localhost
# Redis server port
REDIS_PORT=6379
# Redis database number
REDIS_DB=0
# Redis password (if required, leave empty for no auth)
REDIS_PASSWORD=
# Maximum connections in Redis pool
REDIS_MAX_CONNECTIONS=50
# Redis socket timeout in seconds
REDIS_TIMEOUT=5.0

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=2

# Environment: development, staging, production
ENVIRONMENT=production

# Logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# CORS Settings
ENABLE_CORS=true

# ===========================================
# Security Settings
# ===========================================
# IMPORTANT: Change this in production!
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SearXNG Secret Key - Generate with: openssl rand -hex 32
SEARXNG_SECRET_KEY=

# ===========================================
# pgAdmin Configuration
# ===========================================
PGADMIN_EMAIL=admin@intent-engine.local
PGADMIN_PASSWORD=admin_secure_password_123
PGADMIN_PORT=5050

# ===========================================
# Monitoring Stack (Optional)
# ===========================================
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_secure_password_123
GRAFANA_PORT=3000

# ===========================================
# Development Override (SQLite)
# ===========================================
# Uncomment the line below to use SQLite for local development
# DATABASE_URL=sqlite:///./intent_engine.db
